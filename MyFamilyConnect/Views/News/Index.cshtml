@model IEnumerable<MyFamilyConnect.Models.News>

@{
    
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeStamp)
        </td>
        <td>
            @if (ViewBag.CurrentUserId == item.UserProfile.UserProfileId)
            {
                @Html.ActionLink("Edit | ", "Edit", new { id = item.NewsId })                
                @Html.ActionLink("Delete | ", "Delete", new { id = item.NewsId })
            }            
            @Html.ActionLink("Details", "Details", new { id=item.NewsId })
            
        </td>
    </tr>
}

</table>
